<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.myapplicationnav">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/amex"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="American Express"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity android:name=".CameraActivity" />
        <activity android:name=".FinanceCalendarActivity" />
        <activity android:name=".InsuranceActivity" />
        <activity android:name=".MessagesActivity" />
        <activity android:name=".PersonalAccountsActivity" />
        <activity android:name=".AtmBranchActivity" />
        <activity android:name=".SettingsActivity" />
        <activity android:name=".ContactUsActivity" />
        <activity android:name=".LogoutActivity" />
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>